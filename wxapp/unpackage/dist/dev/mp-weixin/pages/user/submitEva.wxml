<view><view class="goods-box"><view class="goods-inner"><view class="goods-img"><image src="{{evaData.mainPic}}" mode></image></view><view class="goods-cont"><view class="goods-title eli2">{{evaData.title}}</view><view class="goods-state">{{evaData.rebateStatus==0?'未返利':'已返利'}}</view></view><view class="goods-card"><view class="free-card">{{"免单卡X"+evaData.freeCardNumber}}</view><view class="reward">评价奖励</view></view></view><view class="order-num">{{"订单编号："+evaData.orderNo}}</view></view><view class="bg-color"></view><view class="evaluate-box"><view class="evaTitle">提交评价要求</view><view class="font-eva"><text class="name">1、评价文字</text><text class="evanum">{{evaData.textRequire}}</text><block wx:if="{{evaData.textAdvice}}"><view class="evasug">{{"建议："+evaData.textAdvice}}</view></block></view><block wx:if="{{evaData.picRequire=='晒图'}}"><view class="img-eva"><text class="name">2、晒图要求</text><text class="evanum">{{evaData.needPicNumber+"以上商品图"}}</text><block wx:if="{{evaData.picAdvice}}"><view class="evasug">{{"建议："+evaData.picAdvice}}</view></block></view></block><block wx:if="{{evaData.videoRequire=='视频'}}"><view class="video-eva"><text class="name">3、视频要求</text><text class="evanum">5秒以上视频</text><block wx:if="{{evaData.videoAdvice}}"><view class="evasug">{{"建议："+evaData.videoAdvice}}</view></block></view></block></view><view class="bg-color"></view><view class="upload-img"><view data-event-opts="{{[['tap',[['uploadSrc',['$event']]]]]}}" class="upload-box" bindtap="__e"><view class="upload"><block wx:if="{{!uploadData}}"><image class="add" src="https://staticresource.haichennux.net/path?name=1608198558710.png" mode></image></block><block wx:if="{{uploadData}}"><image class="selected" src="{{uploadData}}" mode></image></block><block wx:if="{{isUpload}}"><view data-event-opts="{{[['tap',[['closePic',['$event']]]]]}}" class="close" catchtap="__e"><image src="https://staticresource.haichennux.net/path?name=1608198582007.png" mode></image></view></block></view></view></view><v